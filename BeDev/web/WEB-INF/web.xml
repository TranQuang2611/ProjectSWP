<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>QuizFilter</filter-name>
        <filter-class>filter.QuizFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ExpertFilter</filter-name>
        <filter-class>filter.ExpertFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExpertFilter</filter-name>
        <url-pattern>/expert/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuizFilter</filter-name>
        <url-pattern>/QuizHandle</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuizFilter</filter-name>
        <url-pattern>/QuizReview</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuizFilter</filter-name>
        <url-pattern>/Quiz</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuizFilter</filter-name>
        <url-pattern>/QuizHandle</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>QuizFilter</filter-name>
        <url-pattern>/RecordController</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseManagement</servlet-name>
        <servlet-class>controller.CourseManagement.CourseManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeCourseStatus</servlet-name>
        <servlet-class>controller.CourseManagement.ChangeCourseStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewCourse</servlet-name>
        <servlet-class>controller.CourseManagement.AddNewCourse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExpertDashboard</servlet-name>
        <servlet-class>controller.dashboard.ExpertDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboard</servlet-name>
        <servlet-class>controller.dashboard.AdminDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EarningOverviews</servlet-name>
        <servlet-class>controller.dashboard.EarningOverviews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseInfo</servlet-name>
        <servlet-class>controller.CourseManagement.CourseInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/HomeControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseManagement</servlet-name>
        <url-pattern>/expert/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeCourseStatus</servlet-name>
        <url-pattern>/expert/changecoursestatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewCourse</servlet-name>
        <url-pattern>/expert/addnewcourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExpertDashboard</servlet-name>
        <url-pattern>/expert/ExpertDashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/admin/AdminDashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EarningOverviews</servlet-name>
        <url-pattern>/api/dashboard/EarningOverviews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseInfo</servlet-name>
        <url-pattern>/expert/CourseInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/PaymentController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
